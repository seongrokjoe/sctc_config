<Window x:Class="SCTC_CONFIG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SCTC_CONFIG.Views"
        xmlns:vm="clr-namespace:SCTC_CONFIG.ViewModels"
        Title="SCTC_CONFIG" Height="650" Width="1280"
        MinHeight="400" MinWidth="800"
        Background="#F7FAFC">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <!-- Top toolbar -->
        <Border DockPanel.Dock="Top" Background="{StaticResource PrimaryDarkBrush}" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="경로" Foreground="#A0AEC0"
                           VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12" FontWeight="Medium"/>
                <TextBox Grid.Column="1" Width="380" Height="28" VerticalContentAlignment="Center"
                         Padding="6,0" FontSize="12"
                         Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="3" Content="찾아보기" Style="{StaticResource ToolbarButton}"
                        Command="{Binding BrowseCommand}" Margin="8,0,4,0"/>
                <Button Grid.Column="4" Content="로드" Style="{StaticResource ToolbarButton}"
                        Command="{Binding LoadCommand}" FontWeight="SemiBold"/>

                <Button Grid.Column="6" Content="저장" Style="{StaticResource ToolbarButton}"
                        Command="{Binding SaveCommand}" FontWeight="SemiBold"
                        Background="#48BB78" Foreground="White" BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Tab control -->
        <TabControl SelectedIndex="{Binding SelectedTabIndex}" Padding="0" BorderThickness="0"
                    Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="16,6"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="CSV">
                <views:CsvTabView DataContext="{Binding CsvTab}"/>
            </TabItem>
            <TabItem Header="XML">
                <views:XmlTabView DataContext="{Binding XmlTab}"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
