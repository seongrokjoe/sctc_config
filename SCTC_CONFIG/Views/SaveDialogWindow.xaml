<Window x:Class="SCTC_CONFIG.Views.SaveDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="저장 설정" Width="440" Height="180"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        FontFamily="Segoe UI" FontSize="13"
        Background="#F7FAFC">
    <Border Margin="20,16" >
        <StackPanel>
            <!-- Backup folder name -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="백업 폴더명" VerticalAlignment="Center"
                           FontSize="12" Foreground="#4A5568" FontWeight="Medium" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Height="28" VerticalContentAlignment="Center"
                         Padding="6,0" FontSize="12"
                         Text="{Binding BackupFolderName, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsTextBoxEnabled}"/>
            </Grid>
            <!-- No backup checkbox -->
            <CheckBox Content="백업하지 않음" IsChecked="{Binding NoBackup}"
                      Margin="0,0,0,18" FontSize="12" Foreground="#718096"/>
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="저장" Width="72" Height="30" Margin="0,0,8,0" FontSize="12"
                        FontWeight="SemiBold" Cursor="Hand"
                        Command="{Binding SaveCommand}" IsDefault="True"
                        Background="#48BB78" Foreground="White" BorderThickness="0"/>
                <Button Content="취소" Width="72" Height="30" FontSize="12" Cursor="Hand"
                        Command="{Binding CancelCommand}" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
