<UserControl x:Class="SCTC_CONFIG.Views.FunctionPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <Border DockPanel.Dock="Top" Style="{StaticResource CsvPanelHeader}">
            <TextBlock Text="Function" Style="{StaticResource CsvPanelHeaderText}"/>
        </Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
            <ItemsControl ItemsSource="{Binding Items}" Margin="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ItemRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding FileName}"
                                           Style="{StaticResource FileListName}"/>
                                <TextBlock Grid.Column="1" Text="⚠" Foreground="#DD6B20"
                                           Margin="6,0" VerticalAlignment="Center" FontSize="14"
                                           Visibility="{Binding WarningVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                           ToolTip="시뮬레이션 값이 통일되지 않았습니다."/>
                                <ToggleButton Grid.Column="2"
                                              Style="{StaticResource ValueToggle}"
                                              IsChecked="{Binding IsSimulation, Mode=OneWay}"
                                              Content="{Binding IsSimulation, Converter={StaticResource BoolToToggleTextConverter}}"
                                              Click="ToggleButton_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
